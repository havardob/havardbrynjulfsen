---
import PortableText from "./portableText/PortableText.astro";
interface Props {
    title: string,
    intro?: string
}

const {title, intro} = Astro.props;
---

<div class="hero">
  <h1 class="hero__title">{title}</h1>
  <div class="hero__intro | u-rich-text">
    <PortableText
      portableText={intro}
    />
  </div>
</div>