---
import {PortableText as PortableTextInternal} from 'astro-portabletext';
import InlineLink from '../InlineLink.astro';
import HorizontalRule from '../HorizontalRule.astro';
import CodeBlock from '../CodeBlock.astro';
import ImageBlock from '../ImageBlock.astro';
import EmbedBlock from '../EmbedBlock.astro';
import BaselineBlock from '../BaselineBlock.astro';
import ReviewBlock from '../ReviewBlock.astro';
import DescriptionTag from '../DescriptionTag.astro';

const {portableText} = Astro.props;

const components = {
    mark: {
        externalLink: InlineLink,
        internalLink: InlineLink,
        descriptionTag: DescriptionTag,
    },
    type: {
        horizontalRule: HorizontalRule,
        codeBlock: CodeBlock,
        imageBlock: ImageBlock,
        embedBlock: EmbedBlock,
        baselineBlock: BaselineBlock,
        reviewBlock: ReviewBlock,
    }
};
---

<PortableTextInternal value={portableText} components={components}/>