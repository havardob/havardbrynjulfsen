---
layout: base
permalink: "/{{ aboutPage.slug }}/index.html"
---

<main>
  <div class="l-constraint">
    <div class="page">
      <div class="page__column">
        <h2 class="page__title">{{ aboutPage.title }}</h2>
        <p class="page__intro">
          {{ aboutPage.leading }}
        </p>
        <div class="page__body | u-rich-text">
          {{ aboutPage.body }}
        </div>
      </div>
      <div class="page__column">
        <img src="{{ aboutPage.profileImage }}" class="page__image" />
      </div>
    </div>
  </div>
</main>